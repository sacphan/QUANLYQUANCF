<div id="add-quick-modal">
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">{{{title}}}</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <!--Modal body-->
        <div class="modal-body center">
            <form id="formAgency" class="form-horizontal">
                    <div class="form-group" id="divName">
                        <label class="col-md-12">Tên Sản Phẩm</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" id="name" name="name"  required maxlength="100" value='{{product.Name}}'/>                          
                        </div>
                    </div>   
                    <div class="form-group">
                        <label class="col-md-12">Mã Code</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" id="code" name="code"  required maxlength="100" value='{{product.Code}}'/>                          
                        </div>
                    </div>                
                    <div class="form-group" >
                        <label class="col-md-12">Loại Sản Phẩm</label>
                        <div class="col-md-12">
                            <select class="form-control custom-select" id="category" name="category" required value='{{product.categoryName}}'>
                                 {{#each categorys}}
                                    <option value="{{Id}}">{{Name}}</option>
                                {{/each}}    
                            </select>
                        </div>
                    </div>
                    <div class="form-group" >
                        <label class="col-md-12">Ngày tạo</label>
                        <div class="col-md-12">
                            <input type="date" class="form-control" id="dateCreate" name="dateCreate"  required maxlength="100" value='{{product.createDate}}'/>                          
                        </div>
                    </div>  
                    <div class="form-group" >
                        <label class="col-md-12">Số lượng</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" id="quantity" name="quantity"  required maxlength="100" value='{{product.Quantity}}'/>                          
                        </div>
                    </div>  
                    <div class="form-group" >
                        <label class="col-md-12">Giảm giá</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" id="discount" name="discount"  required maxlength="100" value='{{product.Discount}}'/>                          
                        </div>
                    </div>  
                    <div class="form-group" >
                        <label class="col-md-12">Giá mua</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" id="priceIn" name="priceIn"  required maxlength="100" value='{{product.PriceIn}}'/>                          
                        </div>
                    </div>  
                    <div class="form-group" >
                        <label class="col-md-12">Giá bán</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control" id="priceOut" name="priceOut"  required maxlength="100" value='{{product.PriceOut}}'/>                          
                        </div>
                    </div>  
                </form>
        </div><!--modal content-->

        <div class="modal-footer">
            <a href="#" type="button" onclick="clearModal('add-quick-modal')" class="btn btn-secondary" data-dismiss="modal">Đóng</a>
            <a href="javascript:void(0);" type="submit" name="modal-action" class="btn btn-primary">Lưu</a>
        </div>

    </div>
</div>
</div>
